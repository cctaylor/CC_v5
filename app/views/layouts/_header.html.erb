<div class="row bkgdWhite">
	<div class="large-7 columns">
		<div class="logo">
			<h3><%= link_to "color craze", root_path %></h3>
			<h4>A full-service printer serving the Frisco, TX area</h4>
		</div>
	</div>
	<div class="large-5 columns">
		<div class="addressBlock">
			5850 Town and Country Blvd. Ste 702<br>
			Frisco, TX 75034<br>
			<strong>972-377-5965</strong>
		</div>
	</div>
</div>

<div class="contain-to-grid">
	<nav class="top-bar">
		<ul class="title-area">
			<li class="name"></li>
			<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
		</ul>

		<section class="top-bar-section">
			<ul class="left">
				<li class="divider"></li>
				<li><%= link_to "Printing Services",		printing_services_path %></li>
				<li class="divider"></li>
				<li><%= link_to "Customers",	customers_path %></li>
				<li class="divider"></li>
				<li><%= link_to "About Us",		about_path %></li>
				<li class="divider"></li>
				<li><%= link_to "Contact Us",	contact_path %></li>
				<li class="divider"></li>
			</ul>
			<ul class="right">
				<% if !signed_in? %>
					<li class="divider"></li>
					<li><%= link_to "Sign In",	signin_path, :class => "li-CTA" %></li>
				<% end %>
				<li class="divider"></li>
				<li class="li-CTA"><%= link_to "Request a Quote", rfq_path, :class => "li-CTA" %></li>
				<li class="divider"></li>
			</ul>
		</section>
	</nav>
</div>
<% if signed_in? %>
	<div class="row">
		<div class="large-12 columns">
			<div class="logged-in-nav">
			<ul>
				<% if current_user.admin? %>
					<li><%= link_to "users", users_path %></li>
					<li><%= link_to "quotes", quotes_path %></li>
				<% end %>
				<li><%= link_to "profile", current_user %></li>
				<li><%= link_to "sign out", signout_path, method: "delete" %></li>
			</ul>
			</div>
		</div>
	</div>
<% end %>

<div class="thinSpacerRow"></div>
