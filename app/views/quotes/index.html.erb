<% provide(:title, 'All quotes') %>

<div class="row">
	<div class="large-10 large-offset-1 columns">

		<h3>Quotes (<%= @quotes.count %>)</h3>
			<div class="row">
				<div class="large-1 columns">
					<h6>ID</h6>
				</div>
				<div class="large-3 columns">
					<h6>Name</h6>
				</div>
				<div class="large-4 columns">
					<h6>Created</h6>
				</div>
				<div class="large-4 columns">
					<h6>Status</h6>
				</div>
			</div>
		<ol class="quotes">
			<%= render @quotes %>
		</ol>
		<%= will_paginate @quotes %>

	</div>
</div>
