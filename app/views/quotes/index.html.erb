<% provide(:title, 'All quotes') %>

<div class="row">
	<div class="large-10 large-offset-1 columns">

		<h3>Quotes (<%= @quotes.count %>)</h3>
			<div class="row">
				<div class="small-1 columns">
					<h6>ID</h6>
				</div>
				<div class="small-2 columns">
					<h6>Name</h6>
				</div>
				<% if current_user.admin? %>
					<div class="small-3 columns">
						<h6>Cust</h6>
					</div>
				<% end %>
				<div class="small-4 columns">
					<h6>Created</h6>
				</div>
				<div class="small-2 columns">
					<h6>Status</h6>
				</div>
			</div>
		<ol class="quotes">
			<%= render @quotes %>
		</ol>
		<%= will_paginate @quotes %>
	</div>
</div>
<div class="thinSpacerRowWhite">
</div>
